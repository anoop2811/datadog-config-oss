{
  "notify_no_data": true,
  "no_data_timeframe": 20,
  "name": "<%= environment %> Logsearch: Longlasting unhealthy state below threshold for elasticsearch",
  "silenced": false,
  "query": "avg(last_30m):min:bosh.healthmonitor.system.healthy{job:elasticsearch} < 0.8",
  "message": "One or more of the elasticsearch BOSH agents are reporting either that the VM that they are running on or the elasticsearch job that they are running is unhealthy for over 30 minutes. <%= cloudops_pagerduty %>"
}
