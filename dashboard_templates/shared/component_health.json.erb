{
  "graphs": [
    {
      "definition": {
        "viz": "timeseries",
        "requests": [
          {
            "q": "avg:bosh.healthmonitor.system.healthy{deployment:<%= deployment %>}"
          }
        ],
        "events": [<%= default_events_json %>]
      },
      "title": "Full system health from BOSH"
    },
    {
      "definition": {
        "viz": "timeseries",
        "requests": [
          {
            "q": "cf.collector.healthy{deployment:<%= deployment %>} by {name}"
          }
        ],
        "events": [<%= default_events_json %>]
      },
      "title": "<%= deployment %> Health from the Collector"
    },
    {
      "definition": {
        "viz": "timeseries",
        "requests": [
          {
            "q": "max:aws.elb.un_healthy_host_count{deployment:<%= deployment %>}"
          }
        ],
        "events": [<%= default_events_json %>]
      },
      "title": "Unresponsive Load Balancers"
    }
  ],
  "title": "<%= environment %> Component Health",
  "description": "System health as reported by BOSH, Collector, and Cloudwatch"
}
